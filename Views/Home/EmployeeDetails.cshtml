
@{
    ViewBag.Title = "EmployeeDetails";
    Layout = "~/Views/Shared/SubTheme.cshtml";
}

@model IEnumerable<AngApp.Models.CodeDb.Employee>
@using GridMvc.Html
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>

<h2>CountryList</h2>
<div>
    

    @Html.Grid(Model).Columns(columns =>
{
columns.Add(foo => foo.EM_CODE).Titled("Code").Sortable(true).Filterable(true);
columns.Add(foo => foo.EM_NAME).Sortable(true).Filterable(true).Titled("Name");
columns.Add(foo => foo.EM_ADDRESS).Sortable(true).Filterable(true).Titled("Address");
columns.Add()
                    .Encoded(false)
                    .Sanitized(false)
                    .SetWidth(30)
                    .RenderValueAs(foo => @<button type="button" 
                                                   class="edit-book display-mode" 
                                                   onclick="location.href='@Url.Action("EmployeeSave", "Home", new {Code=foo.EM_CODE })'"
                                                   id="foo.EM_CODE">Edit</button>);

    })


</div>
